{
  "$id": "/fields/order.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order",
  "properties": {
    "order_id": {
      "type": "string"
    },
    "affiliation": {
      "type": "string"
    },
    "total": {
      "type": "number"
    },
    "revenue": {
      "type": "number"
    },
    "value": {
      "type": "number"
    },
    "shipping": {
      "type": "number"
    },
    "tax": {
      "type": "number"
    },
    "discount": {
      "type": "number"
    },
    "coupon": {
      "type": "string"
    },
    "currency": {
      "type": "string"
    },
    "products": {
      "type": "array",
      "items": {
        "$ref": "product.json"
      }
    }
  },
  "type": "object"
}
